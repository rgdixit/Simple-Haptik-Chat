<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp8"
    android:layout_marginRight="@dimen/dp8"
    android:padding="@dimen/dp6">

    <TextView
        android:id="@+id/friend_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/friend_message_background"
        android:padding="@dimen/dp4"
        android:text="message"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp16" />

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_message_text"
        android:layout_marginTop="@dimen/dp6"
        android:text="friend"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/friend_message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/friend_name"
        android:layout_below="@+id/friend_message_text"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginTop="@dimen/dp6"
        android:layout_toRightOf="@+id/friend_name"
        android:text="1"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/my_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/my_message_drawable"
        android:padding="@dimen/dp4"
        android:text="message"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp16" />

    <TextView
        android:id="@+id/my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_message_text"
        android:layout_marginRight="@dimen/dp4"
        android:layout_marginTop="@dimen/dp6"
        android:layout_toLeftOf="@+id/my_message_count"
        android:text="friend"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/my_message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/my_name"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/my_message_text"
        android:layout_marginTop="@dimen/dp6"
        android:text="2"
        android:textSize="@dimen/sp12" />
</RelativeLayout>